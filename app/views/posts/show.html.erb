<p id="notice"><%= notice %></p>

<p>
  <strong>なかみ:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>画像：</strong>
  <%= image_tag @post.image %>
</p>

<% unless @post.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to '気に入らない', favorite_path(post_id: @post.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to '気に入った', favorites_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end  %>

