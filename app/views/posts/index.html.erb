<%= search_form_for @search do |f| %>
  <div class="form-group">
    <%= f.label :content_cont, "Content" %>
    <%= f.text_field :content_cont, class: "form-control" %>
  </div>
<div class="actions"><%= f.submit "Search" %></div>
<% end %>

<% if @results.present? %>
  <%= render partial: "post", locals: { results: @results} %>
